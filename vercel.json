{
  "version": 2,
  "buildCommand": "cd backend && npm install && npm run build && cd ../frontend && npm install && npm run build && cd .. && mkdir -p public && cp -r frontend/dist/* public/",
  "outputDirectory": "public",
  "env": {
    "SOLANA_RPC_URL": "https://mainnet.helius-rpc.com/?api-key=c455719c-354b-4a44-98d4-27f8a18aa79c",
    "PORT": "3001",
    "ENABLE_DEBUG": "false",
    "VITE_API_URL": "https://shadowpay.vercel.app/api",
    "VITE_SOLANA_RPC": "https://mainnet.helius-rpc.com/?api-key=c455719c-354b-4a44-98d4-27f8a18aa79c"
  },
  "builds": [
    {
      "src": "backend/dist/server.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "^/health$",
      "dest": "backend/dist/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

