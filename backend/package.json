{
  "name": "shadowpay-backend",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --import tsx src/server.ts",
    "build": "prisma generate && tsc",
    "fix-db": "timeout 10 node fix-db.js || true",
    "ensure-migrations": "node safe-migrations.js",
    "start": "npm run fix-db && npm run ensure-migrations && node dist/server.js",
    "check-operator-balance": "node check-operator-balance.js"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "pg": "^8.17.2",
    "privacycash": "^1.1.11",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/node": "^24.3.0",
    "prisma": "^5.13.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}
