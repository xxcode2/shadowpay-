// SAVINGS: User's private savings in Privacy Cash pool
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
model Saving {
  id              String   @id @default(cuid())
  
  // User info
  walletAddress   String   @unique  // User's Solana wallet
  
  // Total saved (in base units)
  totalDeposited  BigInt   @default(0)  // Total amount ever deposited
  totalWithdrawn  BigInt   @default(0)  // Total amount ever withdrawn
  currentBalance  BigInt   @default(0)  // Current balance in Privacy Cash
  
  // Assets
  assetType       String   @default("SOL")  // "SOL", "USDC", "USDT", "ZEC", "ORE", "STORE"
  
  // Status
  lastSyncedAt    DateTime?  // Last time balance was synced
  
  // Relations
  transactions    SavingTransaction[]
  autoDeposits    AutoDeposit[]
  goals           SavingGoal[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("savings")
}

