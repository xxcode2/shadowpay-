// SAVING TRANSACTIONS: Deposit, withdraw, send history
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
model SavingTransaction {
  id              String   @id @default(cuid())
  
  // Type of transaction
  type            String   // "deposit", "withdraw", "send"
  status          String   @default("pending")  // pending | confirmed | failed
  
  // Amount info
  amount          BigInt   // Amount in base units (lamports for SOL, 1e6 for USDC, etc)
  assetType       String   // "SOL", "USDC", etc
  
  // Addresses
  fromAddress     String?  // Wallet address (for tracking)
  toAddress       String?  // Recipient address (for send/withdraw)
  
  // Transaction hash on-chain
  transactionHash String?
  
  // Memo
  memo            String?
  
  // Relations
  savingId        String
  saving          Saving   @relation(fields: [savingId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([savingId])
  @@map("saving_transactions")
}

