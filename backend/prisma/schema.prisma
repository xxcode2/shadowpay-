generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentLink {
  id          String   @id @default(cuid())

  amount      Float
  lamports    BigInt              // âœ… SOURCE OF TRUTH: stored in lamports (no rounding)
  assetType   String   // "SOL", "USDC", "USDT"

  // Status
  claimed     Boolean  @default(false)
  claimedBy   String?

  // Tx references
  depositTx   String?
  withdrawTx  String?

  // Relations
  transactions Transaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("payment_links")
}

