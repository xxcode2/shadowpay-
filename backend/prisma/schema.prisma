generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentLink {
  id          String   @id @default(cuid())

  amount      Float
  assetType   String   // "SOL", "USDC", "USDT"

  // üîê CORE SECURITY FIELD (WAJIB)
  commitment  String   @unique

  // Status
  claimed     Boolean  @default(false)
  claimedBy   String?

  // Tx references
  depositTx   String
  withdrawTx  String?

  // Relations
  transactions Transaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("payment_links")
}

model Transaction {
  id              String   @id @default(cuid())

  type            String   // "deposit" | "withdraw"
  status          String   @default("pending") // pending | confirmed | failed

  amount          Float
  assetType       String

  transactionHash String
  fromAddress     String?
  toAddress       String?

  // Relation (WAJIB)
  linkId          String
  link            PaymentLink @relation(fields: [linkId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([linkId])
  @@map("transactions")
}
